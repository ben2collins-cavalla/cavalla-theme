{% if 'hamburger' in menu_display_variations %}
  <header id="header" class="header" role="banner" aria-label="{{ 'Site header'|t }}">
      <nav class="navbar-dark bg-dark">
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#cavalla_navbar" aria-controls="cavalla_navbar" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          <a class="navbar-brand" href="#">{{ logo }}</a>

        {{ page.cart }}
        <div class="navbar-collapse collapse" id="cavalla_navbar">
          <ul class="">
            {{ page.primary_menu }}
          </ul>
        </div>
      </nav>
  </header>
{% endif %}


